extends layout
block head
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel='stylesheet')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css", rel='stylesheet')
    link(rel='stylesheet', href="/stylesheets/style.css")
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    script(src="/javascripts/sostituisciController.js")
block navbar
    div.jumbotron#customJumbo
        h2.customH2 Sostituzione Imei Chiavetta
        form
            div.form-group
                label(for = 'selectImei') Imei da Sostituire
                select#selectImei.form-control
                    each res in oldImei
                        option #{res.IMEI}
            div.form-group
                label(for='inputNewImei') Inserisci nuovo imei
                input#inputNewImei.form-control(type='text', placeholder='Es. 123456789012345')
            div.form-group
                button#btnInvioImei.btn.btn-primary(type='button', onclick='sostituisciImei()') Invio